<h1>Listing games</h1>

<table>
  <tr>
    <th>Teamhomeid</th>
    <th>Teamawayid</th>
    <th>Goalshome</th>
    <th>Goalsaway</th>
    <th>Gameid</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.teamHomeID %></td>
    <td><%= game.teamAwayID %></td>
    <td><%= game.goalsHome %></td>
    <td><%= game.goalsAway %></td>
    <td><%= game.gameID %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

